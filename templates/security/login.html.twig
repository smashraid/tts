{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <img src="images/login.jpg" alt="iniciar sesion" class="img-fluid rounded mx-auto d-block py-5" />
        </div>
        <div class="col-sm-6">
            <div class="text-center">
                <svg class="bi text-white" width="64" height="64" fill="currentColor">
                    <use xlink:href="bootstrap-icons.svg#person-square"/>
                </svg>
            </div>
            <form method="post" class="form-site">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="inputEmail">Correo</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Contrase&ntilde;a</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn bg-metallic-seaweed text-white" type="submit">
                    Iniciar Sesi&oacute;n
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
